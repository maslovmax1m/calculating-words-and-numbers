#include <iostream>
#include <cstdlib>
#include <cctype>
#include <stdio.h>

using namespace std;

void words(char* str)
{
	int count_words = 0, count_digits = 0;
	size_t sizestr = strlen(str);
	char* new_str = new char[sizestr + 2];
	memcpy(new_str, str, sizestr);
	new_str[sizestr] = ' ';
	new_str[sizestr + 1] = '\0';
	delete[] str;
	str = new_str;
	cout << str;
	char* begin_str(str), * n_str(str + 1);
	while (*begin_str)
	{
		if (*n_str == ' ')
		{
			if ((*begin_str >= 'a' && *begin_str <= 'z') || (*begin_str >= 'A' && *begin_str <= 'Z'))
			{
				count_words += 1;
			}
			if (*begin_str >= '0' && *begin_str <= '9')
			{
				count_digits += 1;
			}
			++n_str;
			++begin_str;
		}
	}
	cout << "Count of words" << count_words << endl;
	cout << "Count of digits" << count_digits << endl;
}

int main(int argc, char* argv)
{
	char s[47] = "My best friend is Natalia. She is 27 years old";
	words(s);

	system("pause");
	return 0;
}
